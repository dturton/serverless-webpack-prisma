{
  "compilerOptions": {
    "lib": ["es2017"],
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "typeRoots": ["src/types/index.ts", "node_modules/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    "test/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
